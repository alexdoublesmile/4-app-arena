<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/arena</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">44881212</property>
        <property name="hibernate.show_sql">false</property>

        <mapping class="com.plohoy.bulls.domain.User"/>
        <mapping class="com.plohoy.bulls.domain.Role"/>

    </session-factory>

</hibernate-configuration>